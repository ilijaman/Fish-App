<%- include('./partials/head.ejs')%>
<%- include('./partials/flash.ejs')%>

    <h1>Add a new fish to the library</h1>

    <form method="post" action="/fish" enctype="multipart/form-data" class ="form">
 
    <label for="name">Name</label>

    <input type ="text" name="name" id="name" required />

    <br>

    <label for ="img">Image</label>

    <input type="file" name="img" id="img" required />

    <br>

    <label for="locality">Locality</label>

    <input type="text" name="locality" id="locality" required />

    <br>

    <label for="bait">Bait</label>

    <input type="text" name="bait" id="bait" required />

    <br>

    <label for="minimumSize">Minimum size</label>

    <input type="minimumSize" name="minimumSize" id="minimum-size" required />

    <br>

    <label for="bagLimit">Bag limit</label>

    <input type="bagLimit" name="bagLimit" id="bag-limit" required>

    <br>
    
    <input type="submit" value="add fish" />
    
    </form>

</body>
